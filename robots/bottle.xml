        <inertial pos="-0.00000000000562 -0.00000000149 0.07402" mass="0.5" diaginertia="0.00075849 0.00075813 0.00012044"/>
        <geom class="collision" name ="collision" friction="1 0.001 0.005" type="mesh" mesh="bottle_mesh" rgba="0.266754 0.174546 0.0644028 1" />
        <geom class="visual" group="1" type="mesh" mesh="bottle_mesh" material="object" />
        <geom name ="grabbingPos1" class="visual" group="4" type="cylinder" size="0.005 0.015"  pos="0.024 0 0.065"/>
        <geom name ="grabbingPos2" class="visual" group="4" type="cylinder" size="0.005 0.015"  pos="-0.024 0 0.065"/>
        <geom name ="grabbingPos3" class="visual" group="4" type="cylinder" size="0.005 0.015"  pos="0 0.024 0.065"/>
        <geom name ="grabbingPos4" class="visual" group="4" type="cylinder" size="0.005 0.015"  pos="0 -0.024 0.065"/>
      </body>
    </worldbody>
</mujoco>
