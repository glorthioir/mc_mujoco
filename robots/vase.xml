      <body name="base_link">
        <freejoint name="root" />
        <inertial pos="0 0 0" mass="1.3" fullinertia="0.00778838 0.00779604 0.00141641 -0.00000007 0.00000023 -0.00000018" />
        <geom class="collision" type="mesh" mesh="vase_mesh" rgba="0.266754 0.174546 0.0644028 1" />
        <geom class="visual" type="mesh" mesh="vase_mesh" material="object" />
      </body>
    </worldbody>
</mujoco>
